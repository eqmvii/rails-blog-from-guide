<h1>Articles:</h1>

<%= link_to "Create a new article", new_article_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Show</th>
    <th>Edit</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td> <%# lol that's really how the helpers work... ok... %>
      <td><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure?" } %></td> <%# lol that's really how the helpers work... ok... %>

    </tr>
  <% end %>
</table>

<p>
  <%= link_to "Create a new article", article_path(:new) %>
</p>
