<h1>Articles:</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to "Create a new article", article_path(:new) %>
</p>
